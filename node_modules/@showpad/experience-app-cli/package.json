{
  "name": "@showpad/experience-app-cli",
  "version": "2.2.0",
  "description": "Experience App CLI",
  "bin": "./lib/index.cjs",
  "author": "Platform Solutions <platformsolutions@showpad.com>",
  "license": "BSD-2-Clause",
  "files": [
    "lib",
    "CHANGELOG.md"
  ],
  "scripts": {
    "clean": "run-p clean:ts clean:lib",
    "clean:ts": "rimraf ts",
    "clean:lib": "rimraf lib",
    "prewatch": "run-s clean",
    "watch": "run-s build:ts && run-p watch:ts watch:js",
    "watch:ts": "tsc -w",
    "watch:js": "ts-node ./scripts/build.ts watch",
    "prebuild": "run-s clean",
    "build": "run-s build:ts build:js",
    "build:ts": "tsc",
    "build:js": "ts-node ./scripts/build.ts",
    "postbuild": "run-s clean:ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check --loglevel warn .",
    "format:fix": "prettier --write --loglevel warn .",
    "pretest": "run-s clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "packages:check": "npm-check-updates -x chalk,inquirer,ora,esbuild,esbuild-plugin-filesize,vitest,axios",
    "packages:fix": "npm-check-updates -i -u -x chalk,inquirer,ora,esbuild,esbuild-plugin-filesize,vitest,axios",
    "prepare": "husky install"
  },
  "dependencies": {
    "@showpad/experience-app-types": "0.0.1",
    "adm-zip": "0.5.10",
    "axios": "1.2.1",
    "chalk": "4.1.2",
    "commander": "10.0.0",
    "dotenv": "16.0.3",
    "form-data": "4.0.0",
    "get-stream": "6.0.1",
    "ignore": "5.2.4",
    "inquirer": "8.2.4",
    "inquirer-directory": "2.2.0",
    "json-schema-to-typescript": "11.0.2",
    "open": "8.4.0",
    "ora": "5.4.1",
    "serialize-error": "11.0.0",
    "ws": "8.12.0"
  },
  "devDependencies": {
    "@showpad/experience-app-internal-node": "0.0.2",
    "@tsconfig/node16": "1.0.3",
    "@types/adm-zip": "0.5.0",
    "@types/inquirer": "9.0.3",
    "@types/ws": "8.5.4",
    "@typescript-eslint/eslint-plugin": "5.48.2",
    "@typescript-eslint/parser": "5.48.2",
    "c8": "7.12.0",
    "esbuild": "0.16.17",
    "esbuild-node-externals": "1.6.0",
    "esbuild-plugin-filesize": "0.3.0",
    "eslint": "8.32.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.3",
    "lint-staged": "13.1.0",
    "npm-check-updates": "16.6.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.3",
    "rimraf": "4.1.1",
    "ts-node": "10.9.1",
    "typescript": "4.9.4",
    "vite": "4.0.4",
    "vitest": "0.25.8"
  },
  "engines": {
    "node": ">=15.0.0"
  }
}
